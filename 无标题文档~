sysctl net.core.rmem_max = the_maximum_buffer_size_that_you_need

high:
ffmpeg -i INPUT -vcodec libx264 -preset medium -threads 2 -acodec copy -scodec copy INPUT_H.ts

medium:
ffmpeg -i INPUT -vcodec libx264 -preset fast -threads 2 -acodec aac -strict erperimental 320k -scodec copy -s w*h INPUT_M.ts

low:
ffmpeg -i INPUT -vcodec libx264 -crf 29 -preset ultrafast -tune fastdecodec -threads 2 -acodec aac -strict erperimental 192k -s w*h -scodec copy INPUT_L.ts

